{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitReturns": false,
    "paths": {
      "*": [
        "./node_modules/*"
      ]
    }
  },
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "build",
    "docs",
    "**/*.test.ts"
  ]
}